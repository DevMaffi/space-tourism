// HEADER
header.header

  // NAV
  nav.nav

    // NAV LOGO
    a.nav__logo(href="#home")
      img(src="@img/logo.png", alt="logo")

    // NAV ACCENT
    span.nav__accent

    // NAV MENU
    ul.nav__menu

      each link, i in navLinks
        li.nav__link(class=`${i === 0 ? 'active' : ''}`)
          a(href=`#${link.rel}`)
            span= `${i < 10 ? '0' + i : i}`
            |#{link.label}

    // NAV HAMBURGER
    button.hamburger.hamburger--emphatic.nav__hamburger(type='button')
      span.hamburger-box
        span.hamburger-inner
